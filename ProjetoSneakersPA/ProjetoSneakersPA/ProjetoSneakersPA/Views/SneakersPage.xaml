<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjetoSneakersPA.Views.SneakersPage">
    <ContentPage.Content>
        <StackLayout Padding="20" >
            <StackLayout Orientation="Horizontal">
                <Image Source="three_lines.png" VerticalOptions="Start" HorizontalOptions="Start" HeightRequest="20" WidthRequest="20"/>
                <Label Text="New Arrival" FontAttributes="Bold"
                    VerticalOptions="StartAndExpand" FontSize="17" TextColor="Black"
                    HorizontalOptions="CenterAndExpand" />
                <Image Source="settings.png" VerticalOptions="Start" HorizontalOptions="End" HeightRequest="20" WidthRequest="20"/>
            </StackLayout>
            <Frame Padding="0" Margin="0,40,0,0" IsClippedToBounds="True" HasShadow="False" CornerRadius="10" >
                <SearchBar BackgroundColor="#F2F2F2" PlaceholderColor="LightGray" Placeholder="Search Items"/>
            </Frame>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>